#:kivy 2.2.1
<Button>
    size_hint: 1, None
    size: 900, 120
    background_normal: ""
    background_color: (10/255.0, 22/255.0, 40/255.0, 1)
    canvas.before:
        Color:
            rgba: 119/255.0, 217/255.0, 221/255.0, 1
        Line:
            width: 3
            rectangle: self.x, self.y, self.width, self.height
    
<TextInput>
    foreground_color: (10/255.0, 22/255.0, 40/255.0, 1)

<mainWindow>
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20
        padding: 30
        id: mainBox
        name: "first"

        Image:
            source: "GENOSWITCH_logo_Coloured.png"

        Label:
            id: promptLabel
            text: "Enter miRNA name and sequence below"
            text_size: self.size
            size_hint: 1, None
            size: 900, 30
            valign: "center"

        GridLayout:
            cols: 3

            Button:
                text: "Add miRNA"
                on_press: root.addMiRNA()
            
            Button:
                text: "Remove miRNA"
                on_press: root.removeMiRNA()

            Button:
                text: "get miRNA from miRBase"
                on_press: root.getMirBase()

        BoxLayout:
            orientation: "horizontal"

            Label:
                text: "MiRNA name"

            Label:
                text: "MiRNA sequence"

            Label:
                text: "Reversed"

        GridLayout:
            cols: 3
            id: inputGrid

            TextInput:
                multiline: False
                font_size: 18
            
            TextInput:
                multiline: False
                font_size: 18

            CheckBox:
                # on_active: root.reverse(self, self.active)
                
        
        GridLayout:
            cols: 3

            Button:
                id: submitButton
                text: "Submit"
                on_press: root.submit()

            Button:
                text: "Clear"
                on_press: root.clear()

            Button:
                id: nextButton1
                text: "Next"
                disabled: True
                on_press: root.manager.current = "second"

<thsWindow>

    name: "second"
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 25
        padding: 30

        Label:
            text: "Toehold Switch"
            size_hint: 1, None
            size: self.texture_size
        
        BoxLayout:
            orientation: "horizontal"
            id: thsBox
            size_hint: 1, None
            size: root.width, root.height * 0.7

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "next"
                on_press: root.manager.current = "third"

<triggerWindow>

    name: "third"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 25
        padding: 30

        Label:
            text: "Trigger Complex"
            size_hint: 1, None
            size: self.texture_size

        BoxLayout:
            orientation: "horizontal"
            id: triggerBox
            size_hint: 1, None
            size: root.width, root.height * 0.7

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "back"
                on_press: root.manager.current = "second"

            Button:
                text: "next"
                on_press: root.manager.current = "fourth"
            

<complexWindow>

    name: "fourth"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 25
        padding: 30
        
        Label:
            text: "Activated Toehold Switch"
            size_hint: 1, None
            size: self.texture_size
        
        BoxLayout:
            orientation: "horizontal"
            id: complexBox
            size_hint: 1, None
            size: root.width, root.height * 0.7

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "back"
                on_press: root.manager.current = "third"
            
            Button:
                text: "save results to txt file"
                on_press: root.resultsOutput()
        
<mirBaseWindow>

    name: "mirBaseWindow"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 25
        padding: 30
        
        BoxLayout:
            orientation: "horizontal"
            spacing: 25
            size_hint: 1, 0.05

            Label:
                size_hint: 0.2, 1
                text: "search for miRNA from miRBase"

            TextInput:
                id: searchBar
                size_hint: 0.7, 1
                multiline: False
                font_size: 18

            Button:
                size_hint: 0.1, 1
                text: "search"
                on_press: root.search()

        ScrollView:
            do_scroll_x: False
            size_hint: 1, 0.75
            size: root.width, root.height * 0.75
            GridLayout:
                cols: 4
                size_hint: 1, None
                height: self.minimum_height
                id: searchGrid
                padding: 25
                spacing: 25
                
        
        BoxLayout:
            size_hint: 1, 0.25
            orientation: "horizontal"

            Button:
                text: "back"
                size_hint_y: 1
                on_press: root.manager.current = "first"

            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 1

                Label:
                    text: "miRNA selected:"
                    size_hint: 1, 0.03
                    id: mirnaSelectText

                BoxLayout:
                    padding: 30
                    orientation: "vertical"

                    GridLayout:
                        cols: 2
                        spacing: 15
                        id: mirnaSelectBox

            Button:
                id: mirBaseSubmitButton
                text: "submit"
                size_hint_y: 1
                on_press: root.submitFromBase()

            Button: 
                id: nextButton2
                text: "next"
                size_hint_y: 1
                disabled: True
                on_press: root.manager.current = "second"


<strucShowScreen>

    name: "strucShowWindow"
    spacing: 25
    padding: 30

    BoxLayout:
        orientation: "vertical"

        Label:
            id: strucLabel
            text: "ERROR 404 STRUCTURE SVG NOT FOUND"
            size_hint: 1, 0.1
        
        BoxLayout:
            orientation: "vertical"
            id: strucShowBox
            size_hint: 1, 0.65

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            spacing: 25
            padding: 30

            Button:
                text: "to toehold switch results"
                size_hint: 1, 0.9
                on_press: root.manager.current = "second"

            Button:
                text: "to trigger complex results"
                size_hint: 1, 0.9
                on_press: root.manager.current = "third"
            
            Button:
                text: "to activated toehold switch results"
                size_hint: 1, 0.9
                on_press: root.manager.current = "fourth"
        